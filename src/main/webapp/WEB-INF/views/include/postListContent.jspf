<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<div class="board">
    <div class="row">
        <div class="post-heading mb">${koreanTitle}</div>
    </div>
    <div class="row">
        <table class="boardList">
           <thead>
               <tr>
                   <th class="post-num" style="width: 10%;">Î≤à Ìò∏</th>
                   <th style="title width: 60%;">Ï†ú Î™©</th>
                   <th class="date hide-on-mobile" style="width: 20%;">ÎÇ† Ïßú</th>
                   <th class="views hide-on-mobile" style="width: 10%;">Ï°∞ Ìöå</th>
               </tr>
           </thead>
           <tbody>
           <!-- Í≥µÏßÄÏÇ¨Ìï≠ Î™©Î°ù -->
           <c:forEach var="notice" items="${selfNoticeList}">
               <tr class="notice-tr" style="font-weight: 600;">
                   <td class="post-num">${notice.postNum}&nbsp;</td>
                   <td class="title mobile-visible">
                       <span>[Í≥µÏßÄ]</span>
                       <a class="noticeTitle" href="/boards/${boardTitle}/readPost?postNum=${notice.postNum}"
                       style="font-weight: 600;">${notice.title}</a>
                       <c:if test="${notice.commentCount > 0}">( ${notice.commentCount} )</c:if>
                   </td>
                   <td class="date hide-on-mobile"><fmt:formatDate pattern="YYYY-MM-dd" value="${notice.regDate}"/></td>
                   <td class="views hide-on-mobile">${notice.views}</td>
               </tr>
           </c:forEach>
           <!-- ÏùºÎ∞ò Í≤åÏãúÎ¨º Î™©Î°ù -->
           <c:forEach var="post" items="${postList}">
               <tr>
                   <td class="post-num">${post.postNum}&nbsp;</td>
                   <td class="title mobile-visible">
                       <a class="postTitle" href="/boards/${boardTitle}/readPost?postNum=${post.postNum}">${post.title}</a>
                       <c:if test="${post.commentCount > 0}">( ${post.commentCount} )</c:if>
                   </td>
                   <td class="date hide-on-mobile"><fmt:formatDate pattern="YYYY-MM-dd" value="${post.regDate}"/></td>
                   <td class="views hide-on-mobile">${post.views}</td>
               </tr>
           </c:forEach>
           </tbody>
        </table>
        <c:if test="${empty postList}">
            <p>Í¥ÄÎ†® Í∏ÄÏù¥ ÏóÜÏäµÎãàÎã§...</p>
        </c:if>
        <div class="post-navigation">
            <%@include file="../include/paging.jspf" %>
        </div>
        <div class="form-group">
            <%@include file="../include/searchForm.jspf" %>
        </div>
        <c:if test="${canWrite}">
            <a href="/boards/${boardTitle}/writePost" style="font-size: 12px; display: block; text-align: right;">Í∏ÄÏì∞Í∏∞</a>
        </c:if>
        <c:if test="${member == null}">
            <a href="/login" class="pull-right" style="font-size: 12px; display: block; text-align: right;">üõ†Ô∏è</a>
        </c:if>
    </div>
</div>
