            '8': '/boards/funBoard/',
            '9': '/boards/tVsZBoard/',
            '10': '/boards/tVsPBoard/',
            '11': '/boards/tVsTBoard/',
            '12': '/boards/zVsTBoard/',
            '13': '/boards/zVsPBoard/',
            '14': '/boards/zVsZBoard/',
            '15': '/boards/pVsTBoard/',
            '16': '/boards/pVsZBoard/',
